{
  "compilerOptions": {
    "outDir": "lib",
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES6", "ES2015", "ESNext"],
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "removeComments": true,
    "declaration":true,
    "allowJs": false
  }
}
